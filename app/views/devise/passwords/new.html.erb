<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
  <h1 class="h3 mb-3 fw-normal">Forgot your password?</h1>

  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="form-floating">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", class: 'form-control', placeholder: 'Email address' %>
    <%= f.label :email %>
  </div>

  <button class="w-100 btn btn-lg btn-primary mt-2" type="submit">Send instructions</button>
<% end %>

<%= render "devise/shared/links" %>
